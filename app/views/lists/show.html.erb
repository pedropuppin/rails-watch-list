<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://upload.wikimedia.org/wikipedia/commons/a/ac/Cinema.jpg');">
  <div class="container">
    <h1><%= @list.name %></h1>
    <p><%= "#{@list.movies.count} movies" %></p>
  </div>
</div>

<div class="container mb-5"></div>
  <div class="container mb-5 d-flex justify-content-between my-4">
      <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em></small></span>
      <div>
        <button type="button" class="btn btn-flat" id="new_movie" data-bs-toggle="modal" data-bs-target="#new_movie_modal">
          add a movie
        </button>
        <%= link_to "delete this list", list_path(@list), class: "btn btn-cancel text-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
      </div>
  </div>

  <div class="row my-2 mx-3">
    <% @list.movies.each do | movie | %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="col-12 col-sm-4 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <%= image_tag movie.poster_url, alt: movie.title, class: "card-img-top" %>
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= movie.title %> <span class="text-muted font-weight-normal">â€¢ <%= movie.rating %> <i class="fas fa-star star-yellow"></i></span></strong>
            <small class="text-muted"><%= movie.overview %></small>
            <div class="d-flex align-items-end justify-content-between pt-4">
              <div>
                <i class="fas fa-quote-left me-2"></i><small class="flex-grow-1"><%= bookmark.comment %></small>
              </div>
              <small class="text-right flex-shrink-0"><%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'text-danger' %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <hr class="my-5">

  <div class="row m-3">
    <div class="col-12 col-sm-6">
      <h3>Reviews</h3>
      <small><em class="text-muted"><%= "Be the first one to write a review!" if @list.reviews.empty? %></em></small>
      <% @list.reviews.each do | review | %>
        <div>
          <% review.rating.times do %>
            <i class="fas fa-star star-yellow"></i>
          <% end %>
          <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
          <p class="mb-0"><%= review.comment %></p>
        </div>
        <hr>
      <% end %>
    </div>

    <div class="col-12 col-sm-6">
      <div class="bg-white rounded p-3">
        <h5>Add your review</h5>
        <%= simple_form_for [@list, @review] do |f| %>
          <%= f.input :comment, placeholder: "Add your review here..." %>
          <%= f.input :rating, as: :select, collection: (1..5), required: true, prompt: "What's your rating", input_html: { data: { controller: "star-rating" } } %>
          <%= f.submit class:"btn btn-flat" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
    <%= render "bookmarks/modal", list: @list, bookmark: @bookmark %>
